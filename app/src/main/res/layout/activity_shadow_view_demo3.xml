<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.yc.shadow.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:yc_leftShow="false"
            app:yc_topShow="false"
            app:yc_rightShow="false"
            app:yc_shadowColor="#2a000000"
            app:yc_shadowLimit="5dp">

            <TextView
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="阴影控件，效果图如下所示"
                android:textColor="#ff0000"
                android:textSize="15dp"
                android:textStyle="bold" />

        </com.yc.shadow.ShadowLayout>

        <com.yc.shadow.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:yc_cornerRadius="10dp"
            app:yc_dx="0dp"
            app:yc_dy="0dp"
            app:yc_shadowColor="#2a000000"
            app:yc_shadowLimit="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_show">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="直角控件阴影"
                    android:textColor="#000" />
            </RelativeLayout>



        </com.yc.shadow.ShadowLayout>

        <com.yc.shadow.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:yc_cornerRadius="18dp"
            app:yc_dx="0dp"
            app:yc_dy="0dp"
            app:yc_shadowColor="#2a000000"
            app:yc_shadowLimit="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/shape_show_"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="完全圆形圆角"
                android:textColor="#000" />

        </com.yc.shadow.ShadowLayout>


        <com.yc.shadow.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:yc_cornerRadius="18dp"
            app:yc_dx="0dp"
            app:yc_dy="0dp"
            app:yc_shadowColor="#2aff0000"
            app:yc_shadowLimit="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/shape_show_"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="红色阴影"
                android:textColor="#000" />

        </com.yc.shadow.ShadowLayout>


        <com.yc.shadow.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:yc_cornerRadius="18dp"
            app:yc_dx="0dp"
            app:yc_dy="0dp"
            app:yc_shadowColor="#2a0d00ff"
            app:yc_shadowLimit="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/shape_show_"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="随便改变阴影颜色,颜色透明度更改阴影清晰度"
                android:textColor="#000" />
        </com.yc.shadow.ShadowLayout>


        <com.yc.shadow.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:yc_cornerRadius="18dp"
            app:yc_dx="0dp"
            app:yc_dy="0dp"
            app:yc_shadowColor="#5500ff11"
            app:yc_shadowLimit="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/shape_show_"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="阴影扩散区域改变"
                android:textColor="#000" />
        </com.yc.shadow.ShadowLayout>


        <com.yc.shadow.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:yc_cornerRadius="18dp"
            app:yc_dx="5dp"
            app:yc_dy="0dp"
            app:yc_shadowColor="#5500bfff"
            app:yc_shadowLimit="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/shape_show_"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="阴影x轴偏移"
                android:textColor="#000" />
        </com.yc.shadow.ShadowLayout>


        <com.yc.shadow.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:yc_cornerRadius="18dp"
            app:yc_dx="0dp"
            app:yc_dy="5dp"
            app:yc_shadowColor="#55ff00d5"
            app:yc_shadowLimit="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/shape_show_"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="阴影y轴偏移"
                android:textColor="#000" />
        </com.yc.shadow.ShadowLayout>


        <com.yc.shadow.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:yc_cornerRadius="18dp"
            app:yc_leftShow="false"
            app:yc_shadowColor="#55ff8c00"
            app:yc_shadowLimit="10dp"
            app:yc_topShow="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/shape_show_"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="不偏移xy,让上和左阴影不可见(如titleBar)"
                android:textColor="#000" />
        </com.yc.shadow.ShadowLayout>

    </LinearLayout>

</ScrollView>
